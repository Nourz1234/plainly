@inherits LayoutComponentBase

<AuthorizeView>
    <NotAuthorized>

        <MudLayout>
            <MudMainContent>
                <MudContainer MaxWidth="MaxWidth.Small">
                    <MudCard Style="position:relative;">
                        <MudCardContent>

                            <LoaderBoundary>
                                <ErrorBoundary @ref="_ErrorBoundary">
                                    <ChildContent>
                                        @Body
                                    </ChildContent>
                                    <ErrorContent Context="errorContext">
                                        <Error ErrorBoundary="_ErrorBoundary" Exception="errorContext" />
                                    </ErrorContent>
                                </ErrorBoundary>
                            </LoaderBoundary>

                        </MudCardContent>
                    </MudCard>
                </MudContainer>
            </MudMainContent>
        </MudLayout>

    </NotAuthorized>
    <Authorized>
        <RedirectToHome />
    </Authorized>
</AuthorizeView>

@code {
    private ErrorBoundary? _ErrorBoundary;
}
