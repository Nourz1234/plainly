@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <MudLayout>
            <MudAppBar Color="Color.Primary">

                <MudHidden Breakpoint="Breakpoint.MdAndUp">
                    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                        OnClick="@ToggleDrawer" />
                </MudHidden>

                <MudText Typo="Typo.h4">Plainly</MudText>

                <MudSpacer />

                <MudStack Row="true">
                    <ThemeButton />
                    <UserStrip />
                </MudStack>
            </MudAppBar>
            <MudDrawer @bind-Open="_DrawerOpen" ClipMode="DrawerClipMode.Always">
                <NavMenu />
            </MudDrawer>
            <MudMainContent Style="height: 100vh">
                <MudContainer Style="height: 100%;">

                    <LoaderBoundary>
                        <ErrorBoundary @ref="_ErrorBoundary">
                            <ChildContent>
                                @Body
                            </ChildContent>
                            <ErrorContent Context="errorContext">
                                <Error ErrorBoundary="_ErrorBoundary" Exception="errorContext" />
                            </ErrorContent>
                        </ErrorBoundary>
                    </LoaderBoundary>

                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
</AuthorizeView>

@code {
    private ErrorBoundary? _ErrorBoundary;

    private bool _DrawerOpen = true;

    private void ToggleDrawer()
    {
        _DrawerOpen = !_DrawerOpen;
    }
}
