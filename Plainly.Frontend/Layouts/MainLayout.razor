@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <MudLayout>
            <MudAppBar Color="Color.Primary">

                <MudIconButton Class="d-md-none" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                    OnClick="@ToggleDrawer" />

                <MudText Typo="Typo.h4">Plainly</MudText>

                <MudSpacer />

                <MudStack Row="true" Class="relative" AlignItems="AlignItems.Center">
                    <AppLoaderBoundary>
                        <UserCard />
                        <ThemeButton />
                    </AppLoaderBoundary>
                </MudStack>
            </MudAppBar>
            <MudDrawer @bind-Open="_DrawerOpen" ClipMode="DrawerClipMode.Always">
                <NavMenu />
            </MudDrawer>
            <MudMainContent Style="height: 100vh" Class="relative">
                <MudContainer>

                    <AppLoaderBoundary>
                        <AppErrorBoundary>
                            <ChildContent>
                                @Body
                            </ChildContent>
                            <ErrorContent Context="errorContext">
                                <UnhandledError Exception="errorContext" />
                            </ErrorContent>
                        </AppErrorBoundary>
                    </AppLoaderBoundary>

                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool _DrawerOpen = true;

    private void ToggleDrawer()
    {
        _DrawerOpen = !_DrawerOpen;
    }
}
