@inherits LayoutComponentBase

<AuthorizeView>
    <NotAuthorized>

        <MudLayout>
            <MudMainContent>
                <MudContainer MaxWidth="MaxWidth.Small">
                    <MudCard Style="position:relative;">
                        <MudCardContent>

                            <AppLoaderBoundary>
                                <AppErrorBoundary>
                                    <ChildContent>
                                        @Body
                                    </ChildContent>
                                    <ErrorContent Context="errorContext">
                                        <UnhandledError Exception="errorContext" />
                                    </ErrorContent>
                                </AppErrorBoundary>
                            </AppLoaderBoundary>

                        </MudCardContent>
                    </MudCard>
                </MudContainer>
            </MudMainContent>
        </MudLayout>

    </NotAuthorized>
    <Authorized>
        <RedirectToHome />
    </Authorized>
</AuthorizeView>
