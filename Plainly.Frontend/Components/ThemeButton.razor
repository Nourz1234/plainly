@inherits AppComponent

<MudTooltip Text="@(App.IsDarkMode ? "Light" : "Dark")">
    <MudToggleIconButton Color="Color.Inherit" Toggled="@App.IsDarkMode" ToggledChanged="OnThemeChanged"
        Icon="@Icons.Material.Filled.NightlightRound" ToggledIcon="@Icons.Material.Filled.WbSunny" />
</MudTooltip>


@code {
    [CascadingParameter]
    public required App App { get; set; }

    private async Task OnThemeChanged(bool args)
    {
        await App.SetIsDarkModeAsync(args);
    }
}