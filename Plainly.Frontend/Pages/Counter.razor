@page "/Counter"
@inherits AppComponent

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h4">Counter</MudText>

<MudText>Current count: @currentCount</MudText>

<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCountAsync">Click me</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    private async Task IncrementCountAsync(MouseEventArgs args)
    {
        await Task.Delay(1000);
        IncrementCount();
    }
}
